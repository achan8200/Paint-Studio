<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/colorPicker"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="7dp"
            android:background="@color/black"
            app:tint="#ffffff" />

        <ImageButton
            android:id="@+id/paintbrush"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="7dp"
            android:background="@mipmap/paintbrush" />

        <ImageButton
            android:id="@+id/brush_width"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="7dp"
            android:background="@mipmap/brush_width" />

        <ImageButton
            android:id="@+id/eraser"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="7dp"
            android:background="@mipmap/eraser" />

        <ImageButton
            android:id="@+id/undo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="7dp"
            android:background="@mipmap/undo" />

        <ImageButton
            android:id="@+id/redo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="7dp"
            android:background="@mipmap/redo" />

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="7dp"
            android:background="@mipmap/clear" />

        <ImageButton
            android:id="@+id/save"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="7dp"
            android:background="@mipmap/save" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar" >
        <include layout="@layout/paint_view" />
    </RelativeLayout>
</RelativeLayout>